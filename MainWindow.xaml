<Window x:Class="Snake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" KeyDown="Window_KeyDown">
    <Grid>
        <Canvas x:Name="gameCanvas" Background="Black" Focusable="True"/>
        <TextBlock x:Name="scoreTextBlock" Text="Score: 0" Foreground="White" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Top"/>

        <Button x:Name="restartBtn" Content="Restart" HorizontalAlignment="Center" VerticalAlignment ="Center" Visibility="Collapsed" Click="restartBtn_Click"/>

        <Button x:Name="startBtn"  Content="Start" HorizontalAlignment="Center" VerticalAlignment ="Center" Click="startBtn_Click"/>
    </Grid>
</Window>
